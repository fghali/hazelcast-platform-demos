<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.hazelcast.platform.demos.industry.iiot</groupId>
		<artifactId>iiot-test-root</artifactId>
		<version>5.0</version>
	</parent>

	<artifactId>iiot-test-client</artifactId>

	<name>Hazelcast Platform - IIOT - Test - Hazelcast Client</name>
	<description>For offline testing, a client connecting to the offline cluster</description>

	<properties>
		<docker.image.name>test-client</docker.image.name>
		<docker.jar.file>${project.artifactId}-${project.version}.jar</docker.jar.file>
		<main.basedir>${project.parent.parent.parent.parent.basedir}</main.basedir>
	</properties>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>iiot-custom-classes</artifactId>
			<version>${project.version}</version>
		</dependency>

		<!-- Dependencies with scope "provided" in the above -->
		<dependency>
			<groupId>com.hazelcast</groupId>
			<artifactId>hazelcast-sql</artifactId>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>dockerfile-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>
